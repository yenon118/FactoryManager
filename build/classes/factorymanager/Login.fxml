<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="factorymanager.LoginController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Login" textAlignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="100.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="databaseConnectionLabel">
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin></Label>
      <HBox alignment="CENTER">
         <children>
            <Label text="Username: ">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="username" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="60.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label text="Password: ">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="password" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#clickSubmitButton" text="Submit">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="100.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="invalidLoginText" textAlignment="CENTER" textFill="RED">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER">
         <children>
            <Label text="Don't have an account? " textAlignment="CENTER" />
            <Hyperlink fx:id="registrationLink" onAction="#clickRegistrationLink" text="Create One" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
